# Judge0 IDE Authentication Server Configuration
# Copy this file to .env and customize for your environment

# Application Settings
NODE_ENV=development
APP_PORT=3000
DEBUG_TOKEN=your_debug_token_here

# Database Configuration - Primary (TCP)
DB_HOST=localhost
DB_PORT=3306
DB_USER=moodle_user
DB_PASSWORD=moodle_password
DB_NAME=moodle
DB_DEBUG=false

# Database Configuration - Alternative (Socket)
DB_SOCKET=/var/run/mysqld/mysqld.sock
DB_USE_SOCKET=false

# Connection Pool Settings
DB_CONNECTION_LIMIT=10
DB_TIMEOUT=60000
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=5000

# Admin Credentials (for testing/fallback)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=muadmin2025
ADMIN_USER_ID=admin-1
ADMIN_FIRSTNAME=Admin
ADMIN_LASTNAME=User

# Debug and Development
DEBUG_TOKEN=debug123

# Database Sync Configuration (if needed)
MOODLE_DB_PATH=/euclidms/euclid-db
TEMP_SYNC_DIR=/tmp/moodle-db-sync
MOODLE_DB_MOUNT=/mnt/moodle-db

# Production Security Notes:
# 1. Generate secure passwords: openssl rand -base64 32
# 2. Use strong database credentials
# 3. Change DEBUG_TOKEN: openssl rand -hex 16
# 4. Set NODE_ENV=production
# 5. Restrict database access to necessary hosts only
